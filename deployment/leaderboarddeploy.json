{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "databaseAccountsName": {
      "type": "string",
      "metadata": {
        "description": "Document DB account name"
      }
    },
    "serverfarmsWebAppPlanName": {
      "type": "string",
      "metadata": {
        "description": "WebApp plan name"
      }
    },
    "sitesWebAppName": {
      "type": "string",
      "metadata": {
        "description": "Web app site name"
      }
    },
    "siteName": {
      "type": "string",
      "metadata": {
        "description": "hosted site name"
      }
   }
  },
  "variables": {
    "hostName": "[concat(parameters('siteName'), '.azurewebsites.net')]",
    "scmHostName": "[concat(parameters('sitesWebAppName'),parameters('siteName'), '.scm.azurewebsites.net')]"    
  },
  "resources": [
      {
        "type": "Microsoft.DocumentDB/databaseAccounts",
        "kind": "MongoDB",
        "name": "[parameters('databaseAccountsName')]",
        "apiVersion": "2015-04-08",
        "location": "[resourceGroup().location]",
        "tags": {},
        "properties": {
          "databaseAccountOfferType": "Standard",
          "consistencyPolicy": {
            "defaultConsistencyLevel": "Session"          
          },
          "name": "[parameters('databaseAccountsName')]"
        }
      },
      {
        "type": "Microsoft.Web/serverfarms",
        "sku": {
          "name": "F1",
          "tier": "Free",
          "size": "F1",
          "family": "F",
          "capacity": 0
        },
        "name": "[parameters('serverfarmsWebAppPlanName')]",
        "apiVersion": "2015-08-01",
        "location": "[resourceGroup().location]",
        "properties": {
          "name": "[parameters('serverfarmsWebAppPlanName')]",
          "numberOfWorkers": 0
        }
      },
      {
        "type": "Microsoft.Web/sites",
        "kind": "api",
        "name": "[parameters('sitesWebAppName')]",
        "apiVersion": "2015-08-01",
        "location": "[resourceGroup().location]",
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarmsWebAppPlanName'))]"
        ],
        "properties": {
          "name": "[parameters('sitesWebAppName')]",
          "hostNames": [
            "[variables('hostName')]"
          ],
          "enabledHostNames": [
            "[variables('hostName')]",
            "[variables('scmHostName')]"
          ],
          "hostNameSslStates": [
            {
              "name": "[variables('hostName')]",
              "sslState": 0,              
              "ipBasedSslState": 0
            },
            {
              "name": "[variables('scmHostName')]",
              "sslState": 0,
              "ipBasedSslState": 0
            }
          ],
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('serverfarmsWebAppPlanName'))]"
        }
      }
    ]
}